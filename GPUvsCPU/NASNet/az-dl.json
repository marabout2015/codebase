{
    "apiVersion": "apps/v1beta1",
    "kind": "Deployment",
    "metadata": {
        "name": "azure-dl"
    },
    "spec": {
        "replicas": 2,
        "template": {
            "metadata": {
                "labels": {
                    "app": "azure-dl"
                }
            },
            "spec": {
                "containers": [
                    {
                        "image": "fboylu/kerasnasl-cpu",
                        "name": "azure-dl",
                        "ports": [
                            {
                                "containerPort": 80,
                                "name": "model"
                            }
                        ],
                        "resources": {
                            "limits": {
                                "cpu": 1.25
                            },
                            "requests": {
                                "cpu": 1
                            }
                        }
                    }
                ]
            }
        }
    }
}

{
    "apiVersion": "v1",
    "kind": "Service",
    "metadata": {
        "name": "azure-dl"
    },
    "spec": {
        "ports": [
            {
                "port": 80
            }
        ],
        "selector": {
            "app": "azure-dl"
        },
        "type": "LoadBalancer"
    }
}

